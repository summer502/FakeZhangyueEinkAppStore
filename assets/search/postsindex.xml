---
layout: null
---
{% assign version = 'v1.0.0' %}

<?xml version="1.0" encoding="UTF-8"?>
<post_storage>
  <version>{{ version }}</version>
  <buildAt>{{ buildAt }}</buildAt>
  <total_posts>{{ paginator.total_posts }}</total>
  <total_posts2>{{ total_posts_counter | plus: 1 }}</total_posts2>
  <total_posts3>{{ site.posts.size }}</total_posts3>
  <posts>
  {%- for post in site.posts %}
    {% increment total_posts_counter %}
    {% assign title = post.title | escape %}
    {% assign description = post.content | strip_html | strip_newlines | replace: " ", "" | replace: "	", "" | truncate: 120 | escape %}
    {% assign description2 = post.excerpt | remove: '<p>' | remove: '</p>' %}
    {% assign description3 = post.excerpt %}
    {% assign content = post.content | strip_html | strip_newlines | strip | replace: " ", "" | replace: "	", "" %}
    {% assign date = post.date | date_to_rfc822 %}
    {% assign url = post.url %}
    <post>
      <title>{{ title }}</title>
      <description>{{ description }}</description>
      <description2>{{ description2 }}</description2>
      <description3>{{ description3 }}</description3>
      <content>{{ content }}</content>
      <date>{{ date }}</date>
      <url>{{ url }}</url>
    </post>
  {%- endfor %}
  </posts>
</post_storage>


 
 